<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_cancelable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dialog Cancelable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <Button
        android:id="@+id/btn_non_cancelable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dialog Non Cancelable"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancelable" />

    <Button
        android:id="@+id/btn_positive_negative"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dialog Positive Negative"
        app:layout_constraintEnd_toEndOf="@+id/btn_non_cancelable"
        app:layout_constraintStart_toStartOf="@+id/btn_non_cancelable"
        app:layout_constraintTop_toBottomOf="@+id/btn_non_cancelable" />

    <Button
        android:id="@+id/btn_custom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Custom Layout Dialog"
        app:layout_constraintEnd_toEndOf="@+id/btn_positive_negative"
        app:layout_constraintStart_toStartOf="@+id/btn_positive_negative"
        app:layout_constraintTop_toBottomOf="@+id/btn_positive_negative" />

    <Button
        android:id="@+id/btn_fragment_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fragment Dialog"
        app:layout_constraintEnd_toEndOf="@+id/btn_custom"
        app:layout_constraintStart_toStartOf="@+id/btn_custom"
        app:layout_constraintTop_toBottomOf="@+id/btn_custom" />
</androidx.constraintlayout.widget.ConstraintLayout>